{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "function": "nextjs"
      }
    ]
  },
  "functions": {
    "source": ".",
    "runtime": "nodejs12",
    "ignore": [
      "**/node_modules/**",
      "**/coverage/**"
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5000
    },
    "functions": {
      "port": 7001
    },
    "ui": {
      "enabled": true
    }
  }
}
